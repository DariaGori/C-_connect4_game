@page
@model WebApp.Pages.EditSettingsModel

@{
    ViewData["Title"] = "Default Settings";
}

<h1>Default Settings</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Add New Settings</h4>
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="GameState.GameStateId"/>
            <div class="form-group">
                <label asp-for="GameState.BoardHeight" class="control-label"></label>
                <input asp-for="GameState.BoardHeight" class="form-control"/>
                <span asp-validation-for="GameState.BoardHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameState.BoardWidth" class="control-label"></label>
                <input asp-for="GameState.BoardWidth" class="form-control"/>
                <span asp-validation-for="GameState.BoardWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameState.WinningConditionSequenceLength" class="control-label"></label>
                <input asp-for="GameState.WinningConditionSequenceLength" class="form-control"/>
                <span asp-validation-for="GameState.WinningConditionSequenceLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" asp-route-id="1"/> |
                <a asp-page="./Index" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>
